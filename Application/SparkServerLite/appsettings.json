{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "AllowedHosts": "*",

    "SparkServerLite": {
        "Sitename": "SITE_NAME",
        "SiteURL": "https://blog.brandonbruno.com",
        "MediaFolderServerPath": "./wwwroot/media",
        "MediaFolderWebPath": "/media",
        "DatabaseConnectionString": "Data Source=SparkServer.db",
        "BlogItemsPerPage": 10,
        "BlogBannerServerPath": "./wwwroot/images/blog-banners",
        "BlogBannerWebPath": "/images/blog-banners",
        "DefaultBlogBannerPath": "/images/default-blog-banner.png",
        "DefaultBlogBannerThumbnailPath": "/images/default-blog-banner-thumb.png"
    }
}