@model SparkServerLite.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Blog Home";
    string styleAttribute = string.Empty;
}

@if (Model.BlogList.Count > 0)
{   

    <a href="@Model.BlogList[0].URL">
        <div class="hero" style="background-image: url('@Model.BlogList[0].ImageURL');1">
            <div class="header">Latest Blog Post</div>
            <h2>@Model.BlogList[0].Title</h2>
            <h3>@Model.BlogList[0].Subtitle</h3>
        </div>
    </a>

    Model.BlogList.RemoveAt(0);
}

<div class="section">

    <h2 class="title">Recent Blog Posts</h2>

    <ul class="blog-list">

        @foreach (var blog in Model.BlogList)
        {
            <li class="blog-card">

                <a href="@blog.URL"><img src="@blog.ImageThumbnailPath" title="@blog.Title" alt="" /></a>
                    
                <div class="blog-card-detail">
                    <h3><a href="@blog.URL">@blog.Title</a></h3>
                    <div class="subtitle">@blog.Subtitle</div>
                    <div class="date">@blog.PublishDate.ToString("MMMM dd, yyyy")</div>
                </div>

            </li>
        }

    </ul>

    <div class="bottom-nav">
        <a href="/Blog" class="btn" style="padding: 1.5em 4em; font-weight: bold;">See All Blog Posts</a>
    </div>

</div>