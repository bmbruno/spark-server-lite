@model SparkServerLite.Models.Paging

@if (Model.PageCount.HasValue && Model.PageCount > 1)
{
    <div class="paging">

    <div class="info">
        Page @Model.CurrentPage of @Model.PageCount
    </div>

    @if (Model.CurrentPage > 1)
    {
        <a href="?page=@(Model.CurrentPage - 1)" class="btn previous"><img src="~/images/icons/back.svg" alt="Back icon" title="Back icon" class="svg-icon" aria-hidden="true" /> Previous</a>
    }

    @if (Model.CurrentPage < Model.PageCount)
    {
        <a href="?page=@(Model.CurrentPage + 1)" class="btn next">Next <img src="~/images/icons/next.svg" alt="Next icon" title="Next icon" class="svg-icon" aria-hidden="true" /></a>
    }

    </div>
}