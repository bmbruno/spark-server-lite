@model SparkServerLite.ViewModels.Admin.BlogEditListViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog List";
}

<h1>@ViewData["Title"]</h1>

<div class="sub-menu">
    <a href="/Admin/BlogEdit" class="btn">Add New Post</a>
</div>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Published</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.BlogList)
        {
            <tr>
                <td><a href="/Admin/BlogEdit?ID=@blog.ID">@blog.Title</a></td>
                <td>@blog.Subtitle</td>
                <td>@blog.PublishedDate</td>
                <td>@blog.AuthorName</td>
            </tr>
        }

    </tbody>
</table>