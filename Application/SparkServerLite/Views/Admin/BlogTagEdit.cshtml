@model SparkServerLite.ViewModels.BlogTagEditViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Blog Tag Edit";
}

<h1>@ViewBag.Title</h1>

@if (Model.Mode == SparkServerLite.Infrastructure.Enums.EditMode.Edit)
{
    <h2>ID: @Model.ID</h2>

    <a href="/Admin/BlogTagDelete?ID=@Model.ID" class="btn delete">Delete</a>
}

@using (Html.BeginForm(actionName: "BlogTagUpdate", controllerName: "Admin", method: FormMethod.Post))
{
    if (Model.Mode == SparkServerLite.Infrastructure.Enums.EditMode.Edit)
    {
        @Html.HiddenFor(x => x.ID)
    }

    @Html.HiddenFor(x => x.Mode)

    <div class="row">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="row center">
        <input type="submit" value="Submit" class="btn primary" />
    </div>

}
